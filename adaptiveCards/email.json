{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
   "body": [
        {
            "type": "TextBlock",
            "text": "${subject}",
            "size": "Large",
            "weight": "Bolder",
            "style": "heading",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": " ${receivedDateTime} ",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${bodyPreview}",
            "isSubtle": true,
            "spacing": "None",
            "wrap": true
        }
    ]
}